<div class="form-row">
  <div class="form-item">
    <label>Title</label>
    <input type="text" name="name" value="<%= author.name %>">
  </div>
  <div class="form-item">
    <label>Addess</label>
    <input type="text" name="adresse" value="<%= author.adresse %>">
  </div>
</div>

<div class="form-row">
  <div class="form-item">
    <label>Birth date</label>
    <input type="date" name="date_de_naissance"
          value="<%= author.date_de_naissance == null ? '' : author.date_de_naissance %>">
  </div>
  <div class="form-item">
    <label>Adhesion date</label>
    <input type="date" name="date_adhesion"
          value="<%= author.date_adhesion == null ? '' : author.date_adhesion %>">
  </div>
  
</div>

<div class="form-row">
  <div class="form-item">
    <label>Email</label>
    <input type="text" name="email" value="<%= author.email %>">
  </div>
  <div class="form-item">
    <label>Phone number</label>
    <input type="text" name="tel" value="<%= author.tel %>">
  </div>
</div>
<div class="form-row">
  <div class="form-item">
    <label>Password</label>
    <input type="text" name="password" value="<%= author.hashedpwd %>">
  </div>
  <div class="form-item">
    <label>Avatar url</label>
    <input type="text" name="avatar_url" value="<%= author.avatar_url %>">
  </div>
</div>